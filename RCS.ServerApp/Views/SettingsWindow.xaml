<Window x:Class="RCS.ServerApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Settings Content -->
        <TabControl Grid.Row="0">
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <GroupBox Header="Server Settings" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <TextBlock Text="Port:" Margin="0,5"/>
                                <TextBox x:Name="PortTextBox" Text="9999" Margin="0,5"/>
                                
                                <CheckBox x:Name="AutoStartCheckBox" Content="Auto-start listening on application start" Margin="0,10,0,5"/>
                                
                                <TextBlock Text="Max Clients:" Margin="0,5"/>
                                <TextBox x:Name="MaxClientsTextBox" Text="100" Margin="0,5"/>
                                
                                <TextBlock Text="Heartbeat Timeout (seconds):" Margin="0,5"/>
                                <TextBox x:Name="HeartbeatTimeoutTextBox" Text="15" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Logging">
                            <StackPanel Margin="10">
                                <TextBlock Text="Log Directory:" Margin="0,5"/>
                                <TextBox x:Name="LogDirectoryTextBox" Text="Logs" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <GroupBox Header="Performance">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="EnableStatisticsCheckBox" Content="Enable connection statistics" IsChecked="True" Margin="0,5"/>
                                <CheckBox x:Name="EnableNotificationsCheckBox" Content="Enable notifications" IsChecked="True" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Features">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="EnableClipboardCheckBox" Content="Enable clipboard sharing" IsChecked="True" Margin="0,5"/>
                                <CheckBox x:Name="EnableSystemCommandsCheckBox" Content="Enable system commands (restart, shutdown)" IsChecked="False" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Click="Save_Click" Padding="20,8" Margin="5,0" FontWeight="SemiBold" BorderThickness="0" Background="#4CAF50" Foreground="White" Cursor="Hand"/>
            <Button Content="Cancel" Click="Cancel_Click" Padding="20,8" Margin="5,0" FontWeight="SemiBold" BorderThickness="0" Background="#9E9E9E" Foreground="White" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

