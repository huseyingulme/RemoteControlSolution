<Window x:Class="RCS.ServerApp.Views.RemoteViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RCS.ServerApp.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        MinWidth="800" MinHeight="600">
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Toolbar -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F5F5F5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="10,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Control Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="ðŸŽ® Start Control" 
                            Command="{Binding StartControlCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45a049"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsControlling}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="â¹ Stop Control" 
                            Command="{Binding StopControlCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#F44336"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#da190b"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsControlling}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- Status Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" Padding="10,5" CornerRadius="3">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#F44336"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsControlling}" Value="True">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ControlStatusText}" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- View Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="ðŸ” Fit to Screen" 
                            Click="FitToScreen_Click"
                            ToolTip="EkranÄ± pencereye sÄ±ÄŸdÄ±r">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="1:1" 
                            Click="ActualSize_Click"
                            ToolTip="GerÃ§ek boyut">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#9E9E9E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#757575"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="â›¶ Fullscreen" 
                            Click="ToggleFullscreen_Click"
                            ToolTip="Tam ekran (F11)">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#607D8B"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#455A64"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ” Zoom In" 
                            Click="ZoomIn_Click"
                            ToolTip="YakÄ±nlaÅŸtÄ±r (Ctrl +)">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#9E9E9E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#757575"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ” Zoom Out" 
                            Click="ZoomOut_Click"
                            ToolTip="UzaklaÅŸtÄ±r (Ctrl -)">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#9E9E9E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#757575"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Remote Screen View -->
        <Border Grid.Row="1" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                Background="Black"
                MouseMove="ImageBorder_MouseMove"
                MouseDown="ImageBorder_MouseDown"
                MouseUp="ImageBorder_MouseUp"
                MouseWheel="ImageBorder_MouseWheel"
                MouseLeave="ImageBorder_MouseLeave">
            <ScrollViewer x:Name="ImageScrollViewer"
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto">
                <Image x:Name="RemoteImageControl"
                       Source="{Binding RemoteImage}"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       MouseEnter="RemoteImageControl_MouseEnter"/>
            </ScrollViewer>
        </Border>
        
        <!-- Enhanced Status Bar -->
        <StatusBar Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StatusBar.Resources>
                <Style TargetType="StatusBarItem">
                    <Setter Property="Margin" Value="5,0"/>
                </Style>
            </StatusBar.Resources>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ–¥ï¸ " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Client.MachineName}" FontWeight="SemiBold"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸŒ " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Client.IpAddress}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Mouse: "/>
                    <Run Text="{Binding MousePosition, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalContentAlignment="Right" HorizontalAlignment="Right">
                <TextBlock>
                    <Run Text="Scale: "/>
                    <Run Text="{Binding ImageScale, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="%"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
