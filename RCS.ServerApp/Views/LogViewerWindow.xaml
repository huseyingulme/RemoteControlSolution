<Window x:Class="RCS.ServerApp.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log Viewer" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="#F5F5F5" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="ðŸ”„ Refresh" Click="Refresh_Click" Padding="10,6" Margin="5,0" FontWeight="SemiBold" BorderThickness="0" Background="#2196F3" Foreground="White" Cursor="Hand"/>
                <Button Content="ðŸ—‘ï¸ Clear" Click="Clear_Click" Padding="10,6" Margin="5,0" FontWeight="SemiBold" BorderThickness="0" Background="#F44336" Foreground="White" Cursor="Hand"/>
                <Separator Margin="10,0"/>
                <CheckBox x:Name="AutoScrollCheckBox" Content="Auto Scroll" IsChecked="True" VerticalAlignment="Center" Margin="5,0"/>
                <Separator Margin="10,0"/>
                <ComboBox x:Name="LogLevelComboBox" Width="120" Margin="5,0" SelectionChanged="LogLevel_SelectionChanged">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Info"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Error"/>
                    <ComboBoxItem Content="Debug"/>
                </ComboBox>
            </StackPanel>
        </Border>
        
        <!-- Log Content -->
        <ScrollViewer x:Name="LogScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="LogTextBox" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     FontFamily="Consolas" 
                     FontSize="11"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     BorderThickness="0"
                     Padding="10"/>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

