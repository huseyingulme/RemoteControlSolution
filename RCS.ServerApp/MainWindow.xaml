<Window x:Class="RCS.ServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCS.ServerApp"
        xmlns:vm="clr-namespace:RCS.ServerApp.ViewModels"
        xmlns:converters="clr-namespace:RCS.ServerApp.Converters"
        mc:Ignorable="d"
        Title="Remote Control Solution - Server" Height="800" Width="1600"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Enhanced Toolbar -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="#F5F5F5">
            <Grid Margin="10,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- First Row: Main Controls -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: Port and Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold" FontSize="13"/>
                        <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="80" 
                                 VerticalAlignment="Center"
                                 Padding="5,3"
                                 BorderBrush="#CCCCCC"
                                 FontSize="12">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsListening}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Separator Margin="10,0" VerticalAlignment="Stretch"/>
                        <Button Content="▶ Start Listening" 
                                Command="{Binding StartListeningCommand}" 
                                Padding="12,6"
                                Margin="5,0"
                                FontWeight="SemiBold"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="⏸ Stop Listening" 
                                Command="{Binding StopListeningCommand}" 
                                Padding="12,6"
                                Margin="5,0"
                                FontWeight="SemiBold"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF9800"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F57C00"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    
                    <!-- Center: Status -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" Padding="10,5" CornerRadius="3">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F44336"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsListening}" Value="True">
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock Text="{Binding StatusMessage}" 
                                           VerticalAlignment="Center" 
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Right: IP Address and Fullscreen -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" Padding="8,5" CornerRadius="3" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🌐" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ConnectionInfo}" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Bold"
                                           FontSize="13"
                                           Foreground="#E65100"/>
                                <Button Command="{Binding CopyIpAddressCommand}" 
                                        Content="📋" 
                                        Padding="5,2"
                                        Margin="5,0,0,0"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        ToolTip="Copy IP:Port to clipboard"
                                        FontSize="12">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFE0B2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                        <Button Content="⛶ Fullscreen" 
                                Command="{Binding ToggleFullscreenCommand}"
                                Padding="10,6"
                                FontWeight="SemiBold"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Toggle Fullscreen (F11)">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#607D8B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#455A64"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="📋 Logs" 
                                Click="OpenLogViewer_Click"
                                Padding="10,6"
                                FontWeight="SemiBold"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="View application logs">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#9C27B0"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7B1FA2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="⚙️ Settings" 
                                Click="OpenSettings_Click"
                                Padding="10,6"
                                FontWeight="SemiBold"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Application settings">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#795548"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5D4037"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <!-- Second Row: Search -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍 Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" FontSize="12"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8,5"
                             FontSize="12"
                             BorderBrush="#CCCCCC"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#2196F3"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Client List with Enhanced UI -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FilteredClients}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="140"
                  AlternatingRowBackground="#F9F9F9"
                  Background="White"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Margin" Value="0,2"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Preview" Width="280">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CCCCCC" BorderThickness="2" Background="Black" Padding="3" CornerRadius="3">
                                <Image Source="{Binding ThumbnailImage}" 
                                       Width="260" 
                                       Height="130" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ThumbnailImage}" Value="{x:Null}">
                                                    <Setter Property="Source" Value="{x:Null}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ThumbnailImage}" Value="{x:Null}">
                                                <Setter Property="Background" Value="#424242"/>
                                                <Setter Property="Child">
                                                    <Setter.Value>
                                                        <TextBlock Text="No Preview" 
                                                                   Foreground="White" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   Opacity="0.5"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Machine Name" Binding="{Binding MachineName}" Width="*" FontSize="13" FontWeight="SemiBold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="150" FontSize="12">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="OS Version" Binding="{Binding OSVersion}" Width="200" FontSize="12">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeenString}" Width="120" FontSize="12">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" Margin="0,0,5,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#F44336"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                    <Setter Property="Fill" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <TextBlock VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Offline"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                    <Setter Property="Text" Value="Online"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Actions" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="🖥️ Open View" 
                                        Command="{Binding DataContext.OpenRemoteViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding ClientId}"
                                        Padding="10,6"
                                        Margin="3"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Open remote view window">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#45a049"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="❌ Disconnect" 
                                        Command="{Binding DataContext.DisconnectClientCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding ClientId}"
                                        Padding="10,6"
                                        Margin="3"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Disconnect client">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#F44336"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#da190b"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Enhanced Status Bar -->
        <StatusBar Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StatusBar.Resources>
                <Style TargetType="StatusBarItem">
                    <Setter Property="Margin" Value="8,0"/>
                </Style>
            </StatusBar.Resources>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👥 Clients: " FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding Clients.Count, Mode=OneWay}" FontWeight="Bold" FontSize="12" Foreground="#2196F3"/>
                    <TextBlock Text=" / " FontSize="12" Margin="2,0"/>
                    <TextBlock Text="{Binding FilteredClients.Count, Mode=OneWay}" FontSize="12" Foreground="#666666"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🌐 Server: " FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding ConnectionInfo}" FontWeight="Bold" FontSize="12" Foreground="#FF9800"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Status: " FontWeight="Bold" FontSize="12"/>
                    <Run Text="{Binding StatusMessage}" FontSize="12"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalContentAlignment="Right" HorizontalAlignment="Right">
                <TextBlock FontSize="11" Foreground="#666666">
                    <Run Text="Remote Control Solution v1.0"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
